#!/bin/sh

set -eu


CONFIG_DIR=/etc/element-web
WEB_DIR=/var/www/element-web


if [ "$1" = "configure" ]; then
    /usr/sbin/element-web-installer upgrade
    if [ ! -e "$CONFIG_DIR/config.json" ]; then
        echo "Creating sample $CONFIG_DIR/config.json. Please adjust its content."
        cp "$WEB_DIR/config.json.sample" "$CONFIG_DIR/config.json"
    fi
fi

set +eu

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
